<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@mipmap/cz_head" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:text="昵称："
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/getName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text=""
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@id/text3"
        app:layout_constraintLeft_toRightOf="@id/text3"
        app:layout_constraintTop_toTopOf="@id/text3" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="电话号码："
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="@+id/text3"
        app:layout_constraintTop_toBottomOf="@id/text3" />
    <TextView
        android:id="@+id/getNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text=""
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@id/text4"
        app:layout_constraintLeft_toRightOf="@id/text4"
        app:layout_constraintTop_toTopOf="@id/text4" />
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爱好："
        android:textColor="#000"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintLeft_toLeftOf="@id/imageView"
        app:layout_constraintRight_toRightOf="@id/imageView"
        app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
        android:id="@+id/getLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="约会"
        android:textColor="#000"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@id/text5"
        app:layout_constraintBottom_toBottomOf="@id/text5"
        app:layout_constraintLeft_toRightOf="@id/text5"/>
    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别："
        android:textColor="#000"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text5"
        app:layout_constraintLeft_toLeftOf="@id/text5"
        app:layout_constraintRight_toRightOf="@id/text5"/>
    <TextView
        android:id="@+id/getSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂定"
        android:textColor="#000"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="@id/text6"
        app:layout_constraintBottom_toBottomOf="@id/text6"
        app:layout_constraintLeft_toRightOf="@id/text6"/>
    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自我介绍："
        android:textColor="#000"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text6"
        app:layout_constraintLeft_toLeftOf="@id/text6"
        app:layout_constraintRight_toRightOf="@id/text6"
        app:layout_constraintHorizontal_bias="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>